<% @posts.each do |post| %>
  <%= image_tag post.user.photo %>
  <%= post.user.name %>
  <%= image_tag post.photo %>
  <%= post.description %>
  <%= link_to 'View Post', post_path(post) %>
  <% if post.user == current_user %>
    <%= link_to 'Edit Post', edit_post_path(post) %>
    <%= link_to 'Delete Post', post_path(post), data: { confirm: 'Are you sure?' }, method: :delete %>
  <% end %>

  <ul>
  <% post.comments.each do |comment| %>
    <li><%= comment.text %></li>
  <% end %>
  </ul>

  <% if user_signed_in? %>
    <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
      <%= f.input :text, label: 'Comment', placeholder: 'Add a comment...' %>
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
