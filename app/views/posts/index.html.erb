<% @posts.each do |post| %>
  <div class="post_box">
    <div class="post_header">
        <%= image_tag post.user.photo, class: 'prof_pic_small' %>
        <%= link_to post.user.name, user_path(post.user_id) %>
        <span class="timestamp"><%= distance_of_time_in_words(DateTime.now, post.created_at) %> ago</span>
        <% if post.user == current_user%>
          <%= link_to '<span class="glyphicon glyphicon-trash pull-right btn"></span>'.html_safe, post_path(post.id), data: { confirm: 'Are you sure?' }, method: :delete, 'data-toggle':'tooltip', 'data-placement':'top', 'title': 'Delete this post!' %>
          <%= link_to '<span class="glyphicon glyphicon-pencil pull-right btn" ></span>'.html_safe, edit_post_path(post.id), 'data-toggle':'tooltip', 'data-placement':'top', 'title': 'Edit' %>
        <% end %>
    </div>

    <%= link_to post_path(post.id) do %>
      <%= image_tag post.photo, class: 'photo' %>
    <% end %>

    <span id="likes_container_<%= post.id %>">
      <%= render partial: 'likes', locals: { post: post } %>
    </span>

    <div class="post_body">
      <%= post.description %>
    </div>

    <hr>

    <div id="comments_container_<%= post.id %>">
      <%= render partial: 'comments/comment', locals: { post: post } %>
    </div>
    <!-- </div> -->
  </div>
<% end %>
